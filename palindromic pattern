public class Main{
    public static void main(String[] args) {
        int x=5;
        for(int i=0;i<x;i++){
            for(int s=0;s<x-i;s++){
                System.out.print("  ");
            }
            for(int j=0;j<=i;j++){
                System.out.print(((char)('A'+j))+" ");
            }
            for(int j=i-1;j>=0;j--){
                System.out.print(((char)('A'+j))+" ");
            }
            System.err.println();
        }
    }
}
